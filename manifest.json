{
  "name": "AC Unit Test",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "AtCoder の問題ページから、ユニットテストを生成するアドオン",
  
  "permissions" : [
    "http://*.atcoder.jp/tasks/*", 
    "contextMenus",
    "clipboardRead"
  ],
  
  "icons" : {
    "48" : "icon.png"
  },
  
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "content_scripts": [
        {
            "matches": [
                "http://*.atcoder.jp/tasks/*"
            ],
            "js": [
                "jquery-2.2.0.min.js",
                "content.js"
            ],
            "run_at" : "document_start"
        }
    ]
}
